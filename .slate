config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Push Bindings
bind l:ctrl;alt;shift;cmd  push right bar-resize:screenSizeX/2
bind h:ctrl;alt;shift;cmd  push left  bar-resize:screenSizeX/2
bind k:ctrl;alt;shift;cmd  push up    bar-resize:screenSizeY/2
bind j:ctrl;alt;shift;cmd  push down  bar-resize:screenSizeY/2

# Resize Bindings
bind l:alt;cmd       resize +10% +0
bind h:alt;cmd       resize -10% +0
bind k:alt;cmd       resize +0   -10%
bind j:alt;cmd       resize +0   +10%

# Nudge Bindings
bind l:ctrl;alt;cmd nudge +10% +0
bind h:ctrl;alt;cmd nudge -10% +0
bind k:ctrl;alt;cmd nudge +0   -10%
bind j:ctrl;alt;cmd nudge +0   +10%

# Focus Bindings
bind l:cmd        focus right
bind h:cmd        focus left
bind k:cmd        focus up
bind j:cmd        focus down
bind l:ctrl;cmd   focus behind
bind h:ctrl;cmd   focus behind
bind k:ctrl;cmd   focus behind
bind j:ctrl;cmd   focus behind

# Window Hints
bind e:cmd hint ASDFGHJKLQWERTYUIOPCVBN # use whatever keys you want

bind g:cmd grid padding:5 0:5,2
bind g:cmd,shift grid padding:5 0:5,5
bind g:cmd,alt grid padding:5 0:6,2
bind g:cmd,alt,shift grid padding:5 0:6,5
